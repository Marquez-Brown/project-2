<div class="container">
    <div class="row">
        <div class="col s12 center-align">
            <h1>ALL SONGS</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s2"></div>
        <div class="col s8">

            {{#each songs}}
            <h1><a href="/songs/{{id}}">{{title}}</a></h1>
            <p>{{artist}}</p>
            <p>{{rating}}</p>
            <p>{{total_ratings}}</p>
            <p>{{url}}</p>
            <a class="waves-effect waves-yellow btn-large" href="/songs/{{id}}/edit">Edit Song</a>
            <button class="waves-effect waves-yellow btn-large delete" data-id="{{id}}">Delete Song</button>
            {{/each}}


        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".delete").on("click", function () {
            const idToDelete = $(this).data("id");
            console.log(idToDelete);

            $.ajax({
                url: `/api/songs/${idToDelete}`,
                method: "DELETE",
            }).then(response => {
                window.location.href = "/songs";
            })



        })
    })

</script>